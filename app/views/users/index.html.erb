<div class="container research-form text-center">
  <div class="row">

    <form action="/users" class="form-inline">
      <div class="form-group">
        <h2>Drugs</h2>
        <% DRUGS.each do |drug| %>
          <div class="col-xs-6 col-sm-3">
            <div id="check-button">
              <label class="checkbox inline">
                <input type="checkbox" name="drug" value="<%= drug %>">
                <span><%= drug %></span>
                </br>
              </label>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-sm-6 col-sm-offset-3 text-center form-group">
        <h2>City</h2>
        <select name="city" class="form-control">
          <option value="" selected>Select city</option>
          <% CITIES.each do |city| %>
            <option><%= city %></option>
          <% end %>
        </select>
      </div>

      <div class="col-sm-6 col-sm-offset-3 text-center form-group">
        <h2>Time</h2>
        <select name="time" class="form-control">
          <option value="" selected>Select time</option>
          <% (1..23).each do |i| %>
            <option value="<%= i %>"><%= i %>h00</option>
          <% end %>
        </select>
      </div>

      <div class="col-sm-6 col-sm-offset-3 text-center">
        <input type="submit" class="btn btn-primary btn-lg">
      </div>
    </form>

  </div>
</div>

<div class="container text-center">
  <h1>Our dealers</h1>
  <div class="row">
    <% @filtered_dealers.each do |dealer| %>
      <% random_photo = "http://api.randomuser.me/portraits/#{rand > 0.5 ? "men" : "women"}/#{(rand * (96 - 1) + 1).round}.jpg" %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-image">
            <% if dealer.photo.nil? %>
              <img src="<%= random_photo %>" alt="">
            <% else %>
            <%= image_tag dealer.photo %>
            <% end %>
            <span class="card-title">
              <%= dealer.first_name + " " + dealer.last_name %>
            </span>
          </div>
          <div class="card-content">
            <%= truncate(dealer.description) %>
            </br>
            <p>Working hours:</p>
            <%= dealer.start_time.to_s + "h - " + dealer.end_time.to_s + "h" %>
            </br>
            <%= dealer.address + ", " + dealer.zipcode + " " + dealer.city %>
            </br>
            <% dealer.items.each do |item| %>
              <%= item.name %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<style type="text/css">
  .research-form {
    background: #F2F2F2;
    width: 50%;
    margin-top: 25px;
    padding: 10px 50px 30px 50px;
    border-radius: 2px;
    box-shadow: 1px 1px 2px #D5D5D5;
  }
  .research-form h2 {
    margin: 30px auto 20px auto;
    font-size: 22px;
    color: #727272;
  }
  .research-form .btn {
    margin-top: 30px;
  }
</style>

