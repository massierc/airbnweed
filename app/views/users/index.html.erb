
<div class="container text-center">

<h1>Filter by drugs</h1>
<% DRUGS.each do |drug| %>
  <form action="/users">
    <input type="hidden" name="drug" value="<%= drug %>">
    <input type="submit" value="<%= drug.capitalize %>">
  </form>
<% end %>


<form action="/users">
  <input type="text" name="city">
  <input type="submit" value="Filter by city">
</form>


<h1>Our dealers</h1>
  <div class="row">
    <% @filtered_dealers.each do |dealer| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-image">
            <%= image_tag dealer.photo %>
            <span class="card-title">
              <%= dealer.first_name + " " + dealer.last_name %>
            </span>
          </div>
          <div class="card-content">
            <%= truncate(dealer.description) %>
            </br>
            <%= dealer.working_hours %>
            </br>
            <%= dealer.address + ", " + dealer.zipcode + " " + dealer.city %>
          </div>
          <div class="card-action">
            <a href="#">This is a link</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

