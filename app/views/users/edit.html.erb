<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
      <h2>Edit</h2>
      <%= simple_form_for(current_user) do |f| %>
        <div class="form-inputs">
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <label class="select optional control-label">Become a dealer</label>
          <input type="checkbox" value="Become a dealer" id="toggle-dealer-fields">
          <div class="hidden dealer-fields">
            <%= f.input :address %>
            <%= f.input :city, collection: CITIES %>
            <%= f.input :zipcode %>
            <%= f.input :start_time %>
            <%= f.input :end_time %>
            <%= f.input :description %>
          </div>
          <%= f.input :photo, as: :attachinary %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= content_for(:scripts) do %>
  <script>
    $('#toggle-dealer-fields').change(function(){
      $('.dealer-fields').toggleClass("hidden");
    });
  </script>
<% end %>
