<!DOCTYPE html>
<html>
  <head>
    <title>Airbnweed</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= javascript_include_tag "https://maps.google.com/maps/api/js" %>
    <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>
  <body>
    <%= render 'shared/navbar' %>
    <% unless current_page? root_path %>
      <div id="navbar-placeholder"></div>
    <% end %>
    <%= render 'shared/flashes' %>
    <%= yield %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
    <%= yield(:scripts) %>

    <div class="footer-push"></div>
    <%= render 'shared/footer' %>

    <script>
      $('document').ready(function() {
        if ($('.badge-container > .badge').length > 0) {
          if ( $('.badge-container > .badge')[0].textContent != "0" ) {
            $('.badge-container > .badge').removeClass("badge-blue").addClass("badge-green")
          }
        }
      });
    </script>
  </body>
</html>
